{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard"
    ],
    "enabledManagers": [
        "terragrunt",
        "terraform"
    ],
    "terragrunt": {
        "managerFilePatterns": [
            "/\\.hcl$/"
        ]
    },
    "packageRules": [
        {
            "matchDatasources": [
                "git-tags"
            ],
            "matchPackageNames": [
                "https://github.com/salsiy/terraform-patterns-modules"
            ],
            "groupName": "infrastructure modules",
            "labels": [
                "renovate/modules"
            ]
        },
        {
            "matchDatasources": [
                "git-tags"
            ],
            "matchPackageNames": [
                "https://github.com/salsiy/terraform-patterns-modules"
            ],
            "matchCurrentValue": "/^alb-v/",
            "extractVersion": "^alb-v(?<version>\\d+\\.\\d+\\.\\d+)$"
        },
        {
            "matchDatasources": [
                "git-tags"
            ],
            "matchPackageNames": [
                "https://github.com/salsiy/terraform-patterns-modules"
            ],
            "matchCurrentValue": "/^ecs-cluster-v/",
            "extractVersion": "^ecs-cluster-v(?<version>\\d+\\.\\d+\\.\\d+)$"
        },
        {
            "matchDatasources": [
                "git-tags"
            ],
            "matchPackageNames": [
                "https://github.com/salsiy/terraform-patterns-modules"
            ],
            "matchCurrentValue": "/^s3-private-v/",
            "extractVersion": "^s3-private-v(?<version>\\d+\\.\\d+\\.\\d+)$"
        },
        {
            "matchDatasources": [
                "git-tags"
            ],
            "matchPackageNames": [
                "https://github.com/salsiy/terraform-patterns-modules"
            ],
            "matchCurrentValue": "/^security-group-v/",
            "extractVersion": "^security-group-v(?<version>\\d+\\.\\d+\\.\\d+)$"
        },
        {
            "matchFileNames": [
                "**/development-account/**"
            ],
            "automerge": true
        },
        {
            "matchFileNames": [
                "**/production-account/**"
            ],
            "minimumReleaseAge": "7 days"
        }
    ]
}