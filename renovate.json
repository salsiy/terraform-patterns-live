{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard"
    ],
    "enabledManagers": [
        "terragrunt",
        "terraform"
    ],
    "terragrunt": {
        "managerFilePatterns": [
            "/\\.hcl$/"
        ]
    },
    "packageRules": [
        {
            "matchDatasources": [
                "git-tags",
                "terraform-module"
            ],
            "matchPackagePatterns": [
                "terraform-patterns-modules"
            ],
            "groupName": "infrastructure modules",
            "labels": [
                "renovate/modules"
            ],
            "versioning": "semver"
        },
        {
            "matchDatasources": [
                "git-tags",
                "terraform-module"
            ],
            "matchPackagePatterns": [
                "terraform-patterns-modules"
            ],
            "matchCurrentValue": "/^alb-v/",
            "extractVersion": "^alb-v(?<version>.*)$",
            "versioning": "semver"
        },
        {
            "matchDatasources": [
                "git-tags",
                "terraform-module"
            ],
            "matchPackagePatterns": [
                "terraform-patterns-modules"
            ],
            "matchCurrentValue": "/^ecs-cluster-v/",
            "extractVersion": "^ecs-cluster-v(?<version>.*)$",
            "versioning": "semver"
        },
        {
            "matchDatasources": [
                "git-tags",
                "terraform-module"
            ],
            "matchPackagePatterns": [
                "terraform-patterns-modules"
            ],
            "matchCurrentValue": "/^s3-private-v/",
            "extractVersion": "^s3-private-v(?<version>.*)$",
            "versioning": "semver"
        },
        {
            "matchDatasources": [
                "git-tags",
                "terraform-module"
            ],
            "matchPackagePatterns": [
                "terraform-patterns-modules"
            ],
            "matchCurrentValue": "/^security-group-v/",
            "extractVersion": "^security-group-v(?<version>.*)$",
            "versioning": "semver"
        },
        {
            "matchFileNames": [
                "**/development-account/**"
            ],
            "automerge": true
        },
        {
            "matchFileNames": [
                "**/production-account/**"
            ],
            "minimumReleaseAge": "7 days"
        }
    ]
}